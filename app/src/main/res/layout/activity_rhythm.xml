<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal"
    tools:context="com.truemind.swingbeat.ui.RhythmActivity"
    android:id="@+id/parentLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/bar_green" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bar_blue" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bar_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.09"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_green" />

            <Button
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_blue" />

            <Button
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_red" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_timer"
        android:text="3"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_combo"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="right"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <ImageView
        android:visibility="gone"
        android:id="@+id/move1_1"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bar_move"
        android:layout_width="80dp"
        android:layout_height="18dp" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/move2_1"
        android:layout_marginLeft="105dp"
        android:background="@drawable/bar_move"
        android:layout_width="80dp"
        android:layout_height="18dp" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/move3_1"
        android:layout_marginLeft="205dp"
        android:background="@drawable/bar_move"
        android:layout_width="80dp"
        android:layout_height="18dp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/move1_2"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bar_move"
        android:layout_width="80dp"
        android:layout_height="18dp" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/move2_2"
        android:layout_marginLeft="105dp"
        android:background="@drawable/bar_move"
        android:layout_width="80dp"
        android:layout_height="18dp" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/move3_2"
        android:layout_marginLeft="205dp"
        android:background="@drawable/bar_move"
        android:layout_width="80dp"
        android:layout_height="18dp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/move1_3"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bar_move"
        android:layout_width="80dp"
        android:layout_height="18dp" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/move2_3"
        android:layout_marginLeft="105dp"
        android:background="@drawable/bar_move"
        android:layout_width="80dp"
        android:layout_height="18dp" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/move3_3"
        android:layout_marginLeft="205dp"
        android:background="@drawable/bar_move"
        android:layout_width="80dp"
        android:layout_height="18dp" />

</FrameLayout>
