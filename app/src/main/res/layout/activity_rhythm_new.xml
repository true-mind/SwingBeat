<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rhythm_back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_combo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="#000"
                android:textSize="64sp" />

            <TextView
                android:id="@+id/tv_rhythm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/combo"
                android:textColor="#000"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="#000"
                android:textSize="44sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/timer1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@null"
                    android:src="@drawable/timer_off" />

                <ImageView
                    android:id="@+id/timer2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:src="@drawable/timer_off" />

                <ImageView
                    android:id="@+id/timer3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:src="@drawable/timer_off" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/quit"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_quit"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quit"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>

    <!-- Lane 1-->
    <LinearLayout style="@style/rhythmLaneBase">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="24" />

        <FrameLayout
            style="@style/rhythmLaneFrame"
            android:background="@drawable/rhythm_lane1">

            <ImageView
                android:id="@+id/move1_1"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bar_down"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/move1_2"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bar_down"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/move1_3"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bar_down"
                android:visibility="gone" />

        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="18" />

        <LinearLayout
            android:id="@+id/button1"
            style="@style/rhythmBtnStyle"
            android:background="@drawable/btn_1">

            <TextView
                android:id="@+id/tv1"
                style="@style/rhythmBtnTextStyle"
                android:text="@string/_1" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="29" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Lane 2-->
    <LinearLayout style="@style/rhythmLaneBase">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="24" />

        <FrameLayout
            style="@style/rhythmLaneFrame"
            android:background="@drawable/rhythm_lane2">

            <ImageView
                android:visibility="gone"
                android:id="@+id/move2_1"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bar_down" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/move2_2"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bar_down" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/move2_3"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bar_down" />

        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="18" />

        <LinearLayout
            android:id="@+id/button2"
            style="@style/rhythmBtnStyle"
            android:background="@drawable/btn_2">

            <TextView
                android:id="@+id/tv2"
                style="@style/rhythmBtnTextStyle"
                android:text="@string/_2" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="29" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Lane 3-->
    <LinearLayout style="@style/rhythmLaneBase">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="24" />

        <FrameLayout
            style="@style/rhythmLaneFrame"
            android:background="@drawable/rhythm_lane3">

            <ImageView
                android:visibility="gone"
                android:id="@+id/move3_1"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bar_down" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/move3_2"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bar_down" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/move3_3"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bar_down" />

        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="18" />

        <LinearLayout
            android:id="@+id/button3"
            style="@style/rhythmBtnStyle"
            android:background="@drawable/btn_3">

            <TextView
                android:id="@+id/tv3"
                style="@style/rhythmBtnTextStyle"
                android:text="@string/_3" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="29" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>