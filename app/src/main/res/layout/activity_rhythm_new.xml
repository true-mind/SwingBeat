<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rhythm_back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="64sp"
                android:text="0"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24sp"
                android:text="@string/combo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="44sp"
                android:text="@string/perfect"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@null"
                    android:src="@drawable/timer_on" />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@null"
                    android:src="@drawable/timer_off" />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@null"
                    android:src="@drawable/timer_off" />
                
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_marginRight="29dp"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/btn_quit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#fff"
                android:text="Quit"/>

        </LinearLayout>


    </LinearLayout>

    <!-- Lane 1-->
    <LinearLayout style="@style/rhythmLaneBase">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="24" />

        <FrameLayout
            style="@style/rhythmLaneFrame"
            android:background="@drawable/rhythm_lane1">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:background="@drawable/bar_down"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:background="@drawable/bar_down"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:background="@drawable/bar_down"/>
            
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="18" />

        <LinearLayout
            style="@style/rhythmBtnStyle"
            android:background="@drawable/btn_1">

            <TextView
                style="@style/rhythmBtnTextStyle"
                android:text="@string/_1" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="29" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Lane 2-->
    <LinearLayout style="@style/rhythmLaneBase">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="24" />

        <FrameLayout
            style="@style/rhythmLaneFrame"
            android:background="@drawable/rhythm_lane2">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:background="@drawable/bar_down"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:background="@drawable/bar_down"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:background="@drawable/bar_down"/>

        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="18" />

        <LinearLayout
            style="@style/rhythmBtnStyle"
            android:background="@drawable/btn_2">

            <TextView
                style="@style/rhythmBtnTextStyle"
                android:text="@string/_2" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="29" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Lane 3-->
    <LinearLayout style="@style/rhythmLaneBase">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="24" />

        <FrameLayout
            style="@style/rhythmLaneFrame"
            android:background="@drawable/rhythm_lane3">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:background="@drawable/bar_down"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:background="@drawable/bar_down"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="54dp"
                android:background="@drawable/bar_down"/>

        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="18" />

        <LinearLayout
            style="@style/rhythmBtnStyle"
            android:background="@drawable/btn_3">

            <TextView
                style="@style/rhythmBtnTextStyle"
                android:text="@string/_3" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="29" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>